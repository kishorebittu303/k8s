apiVersion: apps/v1
kind: Deployment 
metadata: 
  name: spring-app 
  namespace: prod 
spec: 
  replicas: 2
  selector: 
    matchLabels: 
      app: springapp
  template: 
    metadata: 
      labels: 
        app: springapp 
    spec: 
      containers: 
      - name: springapp 
        image: kkeducation12345/spring-app:1.0.0
        ports: 
        - containerPort: 8080
        env:
       - name: MONGO_DB_HOSTNAME
          value: mongosvc
       - name: MONGO_DB_USERNAME
         valueFrom:
          configMapRef: 
            name: configspring
            key: dbusername
      - name: MONGO_DB_PASSWORD
        valueFrom:
          SecretKeyRef:
            name: secretssenstive
            key: db_password
        resources:
          requests:
            cpu: 300m
            memory: 256Mi
          limits:
            cpu: 500m
            memory: 512Mi
---
apiVersion: v1
kind: Service
metadata:
  name: springappsvc
  namespace: prod
spec:
 type: NodePort
 selector:
   app: springapp
 ports:
 - port: 80
   targetPort: 8080
  





